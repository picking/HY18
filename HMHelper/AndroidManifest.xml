<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hmhelper.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.hmhelper.application.HMaplication"
        android:allowBackup="true"
        android:icon="@drawable/hmhelper"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/StyledIndicators" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewsFocusDetialActivity"
            android:theme="@style/ActivityTheme_Light" />
        <activity
            android:name=".HealthMessageDetialActivity"
            android:theme="@style/ActivityTheme_Light" />
        <activity
            android:name=".HealthKnowledgeDetialActivity"
            android:theme="@style/ActivityTheme_Light" />
        <activity
            android:name=".AnswerDetialActivity"
            android:theme="@style/ActivityTheme_Light" />
    </application>

</manifest>